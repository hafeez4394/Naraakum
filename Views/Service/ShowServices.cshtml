@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/index-ar-login-8.css" rel="stylesheet" />
<div class="breadcrumbs">
    <div class="container-fluid border-top border-bottom py-3">
        <h2 class="d-inline-flex pr-4 mr-4">الرعاية الصحية المنزلية</h2>
        <a href="#" class="d-inline-flex"><img src="~/images/home.png" alt="" /></a>
        <span class="breadcrumbs-separator d-inline-flex mx-3"><img src="~/images/chevrons-right.png" alt="" /></span>
        <span>خدمات التمريض</span>
    </div>
    <!--end of container-fluid-->
</div>

<div class="content mt-5 d-flex" id="content">
    <div class="container-fluid">
        <div class="mb-5 row bahas">
            <div class="col-auto mb-2">
                <h6 class="text-dark">ما الذى تبحث عنه</h6>
                <p class="mb-0">مثال : التخصص المطلوب أو الخدمة المطلوبة</p>
            </div>
            <div class="col-auto text-center">
                <a href="">بحث</a>
            </div>
        </div>

        <div class="row tamriz justify-content-between">
            <div class="col-md-6 col-12">
                <h2 class="mb-4">خدمات التمريض</h2>
                <p>
                    تستطيع الآن أن تتلقى خدمات التمريض وأنت في منزلك من خلال زيارتك إلى المنزل، وذلك من طاقم تمريض
                    احترافي ولديه خبره في مجال الرعاية الصحية المنزلية
                </p>
            </div>
            <div class="col-md-6 col-12 text-center">
                <img src="../images/nurse-care.png" alt="" class="img-fluid">
            </div>
        </div>

        <!-- end Row tamriz-->
        <div class="row mb-5 flex-wrap loginservices">
            <div class="ListOfService col-lg-9 col-12">

            </div>
            <div class="col-lg-3 col-12">
                <div class="row border rounded my-4 mx-0 cart" id="dv_main_cart" style="display:none;">
                    <ul class="list-group list-group-flush" id="dv_cart">
                    </ul>
                    <a class="btncart"  data-bs-toggle="modal" data-bs-target="#exampleModal" id="btnNext" style="display:none;">
                        <span class="d-block" type="button" data-bs-toggle="modal" data-bs-target="#GoogleMapModal">تابع عملية الحجز</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!--end of container-fluid-->

</div>

<div id="ServiceTemplate" style="display:none;">
    
        <div class="row m-0">
            <div class="col-md-12 serviceinfo mt-4">
                <img src="~/images/aidbox.svg" alt="" class="posimg">
                <div class="col-md-auto col-12">
                    <input type="checkbox" id="_ServiceId" onchange="NK.ShowServices.onServiceSelection(this)" />
                    <img src="../images/nurse.svg" alt="">
                </div>
                <div class="col px-3">
                    <div class="mb-4">
                        <h4>_headerTitle</h4>
                        <p>_description</p>
                    </div>
                    <div>
                        <h6>_include</h6>
                        <p>
                            _exclude
                        </p>
                    </div>
                </div>
            </div>
            <!-- end col-12 -->
        </div>
    
