            <p>_description</p>
        </label>*@

</div>
<ul id="ServiceCartTemplate" style="display:none;">
    <li class="list-group-item px-0 dv_singleCart">
        <div class="d-flex p-0 align-items-center">
            <img src="~/images/cartdelbtn.svg" class="deleteServiceFromCart cartdelbtn" alt="">
            <h6>_headerTitle</h6>
        </div>

        <div class="col-auto">
            <i class="fa fa-plus increaseCartQuantity"></i>
            <span class="mx-2 enfont fw-bold cartQuantity" id="_ServiceId">_cartValue</span>
            <i class="fa fa-minus decreaseCartQuantity"></i>
        </div>
    </li>
</ul>

@Html.Partial("~/Views/Shared/Tools/_GoogleMap.cshtml")


@section Scripts{
    <script src=@Url.Content("~/js/Shared/Tools/_GoogleMap.js")></script>
